@using Barinak.Odev.Models
@model List<Hayvanlar>

@{
    ViewData["Title"] = "TurListe";
    Layout = "~/Views/Shared/_TurLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Ad</th>
        <th>Yas</th>
        <th>Sehir</th>
        <th>Sahiplenme Durumu</th>
        <th>Sil</th>
        <th>Detay</th>


    </tr>
    @foreach (var x in Model)
    {
        <tr>
            @*<td>@x.hayid</td>*@
            <td>@x.ad</td>
            <td>@x.yas</td>
            <td>@x.sehir</td>
            <td>@x.sahiplenmeDurum</td>
            <td><a href="/Hay/HayvanSil/@x.hayid" class="btn btn-danger">Sil</a></td>
            <td><a href="/Hay/HayvanDetay/@x.hayid" class="btn btn-success">Detaylar</a></td>
            <td><a href="/Hay/HayvanSahiplen/@x.hayid" class="btn btn-info">Sahiplen</a></td>
        </tr>
    }
</table>
<a href="/Hay/YeniHayvan/" class="btn btn-primary">Yeni Hayvan Ekle</a>